<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/iv_person_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_person"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:id="@+id/iv_person_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_person_icon"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/unauthe"/>
        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_person_icon"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"
            android:text="得意洋洋"/>
        <TextView
            android:id="@+id/tv_person_time_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#999999"
            android:textSize="11sp"
            android:text="1小时前 · 1.3公里"/>
        <TextView
            android:id="@+id/tv_person_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_person_icon"
            android:layout_below="@id/tv_person_name"
            android:textColor="#FF5B45"
            android:textSize="13sp"
            android:text="9.6分"/>
        <TextView
            android:id="@+id/tv_person_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_person_name"
            android:layout_toRightOf="@id/tv_person_grade"
            android:layout_marginLeft="10dp"
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="男"/>
        <TextView
            android:id="@+id/tv_person_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_person_name"
            android:layout_toRightOf="@id/tv_person_sex"
            android:layout_marginLeft="5dp"
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="26岁"/>
        <TextView
            android:id="@+id/tv_person_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_person_name"
            android:layout_toRightOf="@id/tv_person_age"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tv_job_bg"
            android:layout_marginTop="-5dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:padding="5dp"
            android:text="上班族"/>
        <TextView
            android:id="@+id/tv_person_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_person_icon"
            android:layout_below="@id/tv_person_profession"
            android:textColor="#777777"
            android:layout_marginTop="5dp"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="喜欢交友，喜欢旅行，寻找驴友一起出发。"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_toRightOf="@id/iv_person_icon"
            android:layout_below="@id/tv_person_desc"
            android:layout_marginTop="5dp"
            android:background="#DEDFE0"/>
    </RelativeLayout>
</LinearLayout>
