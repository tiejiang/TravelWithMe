<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back_white"/>
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="新建相册"/>
        <TextView
            android:id="@+id/tv_add_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="新建"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_name"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:text="名称"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:src="@mipmap/btn_delete"/>
        <EditText
            android:id="@+id/ed_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/radioText"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:hint="请输入名称,最多10字"
            android:maxLength="10"
            android:background="@android:color/transparent"
            android:text=""
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_delete"
            android:lines="1"
            android:singleLine="true"
            android:button="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_desc"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:text="描述"/>

        <ImageView
            android:id="@+id/iv_desc_delete"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/btn_delete"/>
        <EditText
            android:id="@+id/ed_desc_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/radioText"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:hint="请输入相册描述，最多100字"
            android:layout_toRightOf="@id/tv_desc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/iv_desc_delete"
            android:text=""
            android:maxLength="100"
            android:button="@null"/>
    </RelativeLayout>
</LinearLayout>
