<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_item_dynamics_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/dynamics_icon"/>
        <TextView
            android:id="@+id/tv_item_dynamics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_item_dynamics_icon"
            android:layout_toRightOf="@id/iv_item_dynamics_icon"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_black"
            android:textSize="17sp"
            android:text="夏雨的文章"/>
        <TextView
            android:id="@+id/tv_item_dynamics_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_item_dynamics_title"
            android:layout_below="@id/tv_item_dynamics_title"
            android:layout_marginTop="6dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text="2016-08-02 11:20:08"/>
        <ImageView
            android:id="@+id/iv_item_dynamics_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_dynamics_hide"/>
        <TextView
            android:id="@+id/tv_item_dynamics_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_item_dynamics_icon"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            android:text="8月6号出发去贵州约10天，之后四川，陕西，青海，喜欢在路上调整行程，一路慢旅行，享受路上的阳光，真正喜欢旅行的来一起。"/>
        <GridView
            android:id="@+id/gv_item_dynamics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_dynamics_des"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:listSelector="@android:color/transparent"
            android:layout_centerHorizontal="true"
            android:scrollbars="none"
            android:numColumns="3"/>
        <TextView
            android:id="@+id/tv_item_dynamics_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_address"
            android:layout_below="@id/gv_item_dynamics"
            android:drawablePadding="5dp"
            android:textSize="13sp"
            android:textColor="#999999"
            android:text="广州市海珠区"/>
        <TextView
            android:id="@+id/tv_item_dynamics_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_zan"
            android:layout_below="@id/gv_item_dynamics"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="36"/>
        <TextView
            android:id="@+id/tv_item_dynamics_say"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_say"
            android:layout_toLeftOf="@id/tv_item_dynamics_zan"
            android:drawablePadding="5dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/gv_item_dynamics"
            android:textSize="14sp"
            android:textColor="#999999"
            android:text="24"/>
    </RelativeLayout>
</LinearLayout>