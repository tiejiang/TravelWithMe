<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_personal_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/bg"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_above="@+id/ly_bottom_view"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@mipmap/demo1">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/back_white"/>
                <ImageView
                    android:id="@+id/iv_title_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/personal_home_page_more"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp">
                    <TextView
                        android:id="@+id/tv_personal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:text="下雨的文章"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_personal_name"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="2dp"
                        android:src="@mipmap/unauthe"/>
                    <RatingBar
                        android:id="@+id/rat_personal_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MyRatingBar"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:rating="3.5"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@id/tv_personal_name"/>
                    <TextView
                        android:id="@+id/tv_personal_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_personal_name"
                        android:layout_toRightOf="@id/rat_personal_grade"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:textColor="#FFAA0C"
                        android:textSize="16sp"
                        android:text="6.5"/>
                    <ImageView
                        android:id="@+id/iv_personal_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rat_personal_grade"
                        android:paddingTop="5dp"
                        android:src="@mipmap/personal_sex"/>
                    <TextView
                        android:id="@+id/tv_personal_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rat_personal_grade"
                        android:layout_toRightOf="@id/iv_personal_sex"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="女"/>
                    <TextView
                        android:id="@+id/tv_personal_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rat_personal_grade"
                        android:layout_toRightOf="@id/tv_personal_sex"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="21岁"/>
                    <TextView
                        android:id="@+id/tv_personal_pollux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rat_personal_grade"
                        android:layout_toRightOf="@id/tv_personal_age"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="金牛座"/>
                    <TextView
                        android:id="@+id/tv_personal_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rat_personal_grade"
                        android:layout_toRightOf="@id/tv_personal_pollux"
                        android:drawableLeft="@mipmap/personal_address"
                        android:drawablePadding="5dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="广州天河区 距离1.5km"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C6C6C6"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/ly_personal_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"/>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#30B2FF"
                    android:gravity="center"
                    android:text="关注 696"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#f7f7f7"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#30B2FF"
                    android:gravity="center"
                    android:text="被关注 96"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/radioText"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:text="想去景点（4）"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f7f7f7"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:overScrollMode="never"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/ly_personal_want"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:tabIndicatorColor="#30B2FF"
                app:tabSelectedTextColor="#30B2FF"
                app:tabTextColor="#808080"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DEDFE0"/>
            <FrameLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/ly_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f3f3f3"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <com.demo.travelsociety.custom_view.DrawableCenterTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_message"
            android:textColor="#30B2FF"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:text="发送消息"/>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#f7f7f7"/>
        <com.demo.travelsociety.custom_view.DrawableCenterTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/icon_follow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="#30B2FF"
            android:text="加关注"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_personal_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/btn_publish"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
