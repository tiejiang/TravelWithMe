<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hyg.dropdownmenu.DropDownMenu
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dddividerColor="@color/white"
        app:ddmaskColor="@color/mask_color"
        app:ddmenuBackgroundColor="@color/white"
        android:layout_below="@id/rl_title"
        app:ddmenuSelectedIcon="@mipmap/dropdown_2"
        app:ddmenuTextSize="13sp"
        app:ddmenuUnselectedIcon="@mipmap/dropdown_1"
        app:ddtextSelectedColor="#F5A623"
        app:ddtextUnselectedColor="#494848"
        app:ddunderlineColor="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ListView
                android:id="@+id/list"
                android:paddingTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"/>
        </LinearLayout>
    </com.hyg.dropdownmenu.DropDownMenu>

    <ImageView
        android:id="@+id/btn_publish"
        android:layout_width="50dp"
        android:layout_height="51dp"
        android:src="@mipmap/btn_publish"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>