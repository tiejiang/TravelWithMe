<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/album_frame"/>
        <ImageView
            android:id="@+id/iv_album"
            android:layout_width="160dp"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:background="@mipmap/demo2"/>
        <TextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv_album"
            android:textColor="#333333"
            android:textSize="17sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_album_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_album_name"
            android:layout_toRightOf="@id/tv_album_name"
            android:layout_marginLeft="10dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>